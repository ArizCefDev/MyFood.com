@model List<MyFood.com.Entity.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="main-grid">
	<div class="agile-grids">
		<!-- tables -->

		<div class="table-heading">
			<h2>Categories Tables</h2>
		</div>
		<div class="agile-tables">
			<div class="w3l-table-info">
				<a href="/Admin/CategoryAdd/" class="btn btn-primary">New</a>
				<table id="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Name</th>
							<th>Update</th>
							<th>Delete</th>
						</tr>
					</thead>
					<tbody>
 						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ID</td>
								<td>@item.Name</td>
								<td><a href="/Admin/CategoryUpdate/@item.ID" class="btn btn-success">Update</a></td>
								<td><a href="/Admin/CategoryDelete/@item.ID" style="background:red;" class="btn btn-danger">Delete</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
		<!-- //tables -->
	</div>
</div>